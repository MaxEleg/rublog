<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<%= paginate @articles%>
<table>
    <% @articles.each do |article| %>
      <tr>
        <thead>
          <tr>
            <th><%= article.title %></th>
            <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
            <span class ="badge"><%= article.get_upvotes.size %> </span>
            <span class="glyphicon glyphicon-thumbs-down glyphicon-align-center" aria-hidden=""true></span>
            <span class ="badge"><%= article.get_downvotes.size %> </span>
            <th colspan="3"></th>
          </tr>
           <tr>
            <th><%= article.categories %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>


          <td><%= article.text %></td>
          <td><% if article.image? %>
              <%= image_tag article.image.thumb.url %>
          <% end %><td>
          <td><%= link_to 'Show', article %></td>
          <% if signed_in?  %>
          <td><%= if article.createdBy == current_user.email  
            link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } end %></td>

          <% end %>
        </tbody>

      </tr>

    <% end %>
</table>

