<p id="notice"><%= notice %></p>

<h1>Articles</h1>
<%= paginate @articles%>
<table>
    <% @articles.each do |article| %>
      <tr>
        <thead>
          <tr>
            <th><%= article.title %></th>
            <th colspan="3"></th>
          </tr>
           <tr>
            <th><%= article.categories %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <td><%= article.text %></td>

          <td><%= link_to 'Show', article %></td>
          <% if signed_in?  %>
          <td><%= if article.createdBy == current_user.email  
              link_to 'Edit ', edit_article_path(article) end %></td>
          <td><%= if article.createdBy == current_user.email  
            link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } end %></td>
          <% end %>
        </tbody>
      </tr>
    <% end %>
</table>

<br>

<%= link_to 'New article', new_article_path %>
